{
  "name": "node",
  "version": "0.0.0",
  "description": "The bundler node module of Etherspot bundler client",
  "author": "Etherspot",
  "homepage": "https://github.com/etherspot/etherspot-bundler#readme",
  "license": "MIT",
  "type": "module",
  "files": [
    "lib/**/*.d.ts",
    "lib/**/*.js",
    "lib/**/*.js.map",
    "*.d.ts",
    "*.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/etherspot/etherspot-bundler.git"
  },
  "bugs": {
    "url": "https://github.com/etherspot/etherspot-bundler/issues"
  },
  "scripts": {
    "clean": "rm -rf lib && rm -f *.tsbuildinfo",
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint --color --ext .ts src/ test/",
    "lint:fix": "yarn run lint --fix",
    "pretest": "yarn run check-types",
    "test": "yarn test:unit",
    "test:unit": "mocha 'test/unit/**/*.test.ts'",
    "check-readme": "typescript-docs-verifier"
  },
  "dependencies": {
    "@chainsafe/discv5": "3.0.0",
    "@chainsafe/ssz": "^0.10.1",
    "@libp2p/interface-connection": "3.0.8",
    "@libp2p/interface-connection-manager": "1.3.7",
    "@libp2p/peer-id-factory": "2.0.1",
    "@multiformats/multiaddr": "11.4.0",
    "db": "0.0.1",
    "libp2p": "^0.42.2",
    "prettier": "^2.8.4",
    "types": "0.0.1"
  }
}
